{
    "name": "sky-plane-notifier",
    "version": "1.0.0",
    "manifest_version": 3,
    "description": "Check airplane schedules in a minimum time and get notified when the tickets are available at your desired price.",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "storage",
        "activeTab",
        "cookies"
    ],
    "action": {
        "default_title": "sky-plane-notifier",
        "default_popup": "popup/index.html"
    },
    "background": {
        "service_worker": "background_scripts/index.js",
        "type": "module"
    }
}